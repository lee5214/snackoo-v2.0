.collection__filters{
  float: right;
  .dropdown{
    .dropdown__button{
      border: 1px solid #a8e8e2;
      background: white;
    }
    .dropdown-list{
      background-color: white;
      .dropdown-list__item{
        border: 1px solid #a8e8e2;
        margin: 3px 0;
        &:hover {
          color: black;
          background: #a8e8e2;
        }
      }
    }
  }
}
.grid__item{
  display: flex !important;
  .sidebar-pos{
    width: 25%;
    min-width: 200px;
  }
  .collection-wrapper{
    width: 75% !important;
    min-width: 400px;
    //height: 60vh;
    overflow: scroll;
    .grid--in-row{
      width: 32%;
      min-width: 200px;
    }
  }
}