<!-- Swiper -->
<style>
	.swiper-container {
		max-width: 1000px;
	}


</style>

<div class="section_container section-0holder0 product_container-card_shadow">
	{% assign home_sec_name = section.settings.sec_subtitle %}
	{% include 'homepage-section-subtitle' with home_sec_name %}
	<div style="position: relative;">
		<div class="carousel__navigation" style="width: 9%;position: absolute; left:0;">
			<!-- Add Arrows -->
			<button class="homepage-swiper-btn-prev-row0holder0 carousel-button-prev">
				<svg viewBox="0 0 18 18" style="margin: 0 auto"
					 data-reactid=".2akuon0ef4.1.2.0.0.1.0:$experiences_11.0.1.3.0.0.0.0">
					<path d="M13.703 16.293a1 1 0 1 1-1.415 1.414l-7.995-8a1 1 0 0 1 0-1.414l7.995-8a1 1 0 1 1 1.415 1.414L6.413 9l7.29 7.293z"
						  data-reactid=".2akuon0ef4.1.2.0.0.1.0:$experiences_11.0.1.3.0.0.0.0.0"></path>
				</svg>

			</button>
		</div>
		<div class="carousel__navigation" style="width: 10%;position: absolute; right:0;">
			<!-- Add Arrows -->
			<button class="homepage-swiper-btn-next-row0holder0 carousel-button-next">
				<svg viewBox="0 0 18 18" style="margin: 0 auto"
					 data-reactid=".2cplo9u29s0.1.2.0.0.1.0:$experiences_5.0.1.3.2.0.0.0">
					<path d="M4.293 1.707A1 1 0 1 1 5.708.293l7.995 8a1 1 0 0 1 0 1.414l-7.995 8a1 1 0 1 1-1.415-1.414L11.583 9l-7.29-7.293z"
						  data-reactid=".2cplo9u29s0.1.2.0.0.1.0:$experiences_5.0.1.3.2.0.0.0.0"></path>
				</svg>
			</button>
			<!-- Add Pagination -->
		</div>
		<div class="swiper-container carousel carousel-section-1row0holder0" data-autoplay="{{ autoplay }}">
			<div class="swiper-wrapper">
				{% for product in collections[section.settings.section-products-0holder0].products %}
					<div class="swiper-slide"
						 data-img-bg="{% if product.featured_image.size > 0 %}{{ product.featured_image | img_url: 'small' }}{% else %}{{ 'img_no_image.jpg' | asset_url }}{% endif %}">
						{% include 'product-item-grid' %}
					</div>
				{% endfor %}

			</div>
		</div>
	</div>
</div>
{% schema %}
{
"name": "Section Product 0holder0",
"settings": [
{
"type": "collection",
"id": "section-products-0holder0",
"label": "Section Product 0holder0"
},
{
"type": "text",
"id": "autoplay",
"label": "Time",
"info": "If this parameter is not specified, autoplay will be disabled. The value should be in milliseconds"
},
{
"type": "text",
"id": "sec_subtitle",
"label": "title",
"info": "input a name for this sec"
}
],
"presets": [
{
"name": "Section Product 0holder0",
"category": "_Owen"
}
]
}
{% endschema %}

